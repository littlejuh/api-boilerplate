{
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "never"],
        "eol-last": ["error", "always"]
    },
    "plugins": ["jest"]
}